{
    "compilerOptions": {
        "alwaysStrict": true,
        
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        
        "strict": true,
        
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        
        "target": "es5",
        "lib": ["DOM","ES6","DOM.Iterable","ScriptHost"],
        "module": "commonjs",
        "newLine": "LF",
        
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        
        "noEmitOnError": true,
        
        "removeComments": true
    },
    "include": [
        "src/**/*",
        //"test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}